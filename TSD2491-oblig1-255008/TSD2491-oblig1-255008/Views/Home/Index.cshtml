@model TSD2491_oblig1_255008.MatchingGameModels


@{
    ViewData["Title"] = "Home Page";
    <head>
        <style>
            .container {
                width: 400px;
            }

            .button {
                width: 100px;
                height: 100px;
                font-size: 50px;
            }
        </style>
    </head>
}

<div class="text-center">
    <h1 class="display-4">TSD2491_oblig1_255008</h1>
</div>

<div class="container">
    <div class="row">
        @for (var animalNumber = 0; animalNumber < Model.animals.Count; animalNumber++)
        {
            var animal = Model.animals[animalNumber];
            var uniqueDescription = $"Button #{animalNumber}";

            <div class="col-3">
                    <input type="hidden" name="animal" value="@animal" />
                    <input type="hidden" name="description" value="@uniqueDescription" />
                    <input type="submit" value="@animal" class="button" />
                
            </div>
        }
    </div>
    <div class="row">
        <h2>Matches found: @Model.matchesFound</h2>
    </div>
</div>